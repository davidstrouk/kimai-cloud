# Kimai Environment Configuration
# Copy this file to .env and update the values

# Application Settings
APP_ENV=prod
APP_SECRET=your-secret-key-here
TRUSTED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Configuration
DATABASE_URL=mysql://username:password@host:port/database

# Email Configuration  
MAILER_FROM=your-email@domain.com
MAILER_URL=null://localhost

# Security
CORS_ALLOW_ORIGIN=^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$

# Admin User Setup
KIMAI_ADMIN_USER=admin
KIMAI_ADMIN_EMAIL=admin@domain.com
KIMAI_ADMIN_PASSWORD=your-secure-password
